{
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "dialog:allow-open",
    "fs:allow-exists",
    "fs:allow-resource-read",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "binaries/backend",
          "sidecar": true
        }
      ]
    },
    "shell:allow-kill",
    "shell:allow-open",
    {
      "identifier": "shell:allow-spawn",
      "allow": [
        {
          "name": "binaries/backend",
          "sidecar": true
        }
      ]
    },
    "shell:allow-stdin-write"
  ]
}
